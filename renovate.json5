// Do not edit this file directly, but in devtool/renovate.py
// Re-generate with:
//     devtool gen renovate.json5
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "schedule": [
    "* * 1,15 * *"
  ],
  "prHourlyLimit": 0,
  "gitIgnoredAuthors": [
    "github-actions[bot]@users.noreply.github.com"
  ],
  "git-submodules": {
    "enabled": true,
    "packageRules": [
      {
        "matchManagers": [
          "git-submodules"
        ],
        "groupName": "Runner software"
      },
      {
        "matchManagers": [
          "git-submodules"
        ],
        "matchPackageNames": [
          "https://github.com/openshift/oc.git"
        ],
        "versioning": "regex:^openshift-clients-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<build>\\d+)$"
      }
    ]
  },
  "gomod": {
    "packageRules": [
      {
        "matchManagers": [
          "gomod"
        ],
        "enabled": false
      },
      {
        "matchManagers": [
          "gomod"
        ],
        "matchPackageNames": [
          "github.com/open-policy-agent/conftest",
          "github.com/sigstore/cosign/v2",
          "oras.land/oras",
          "github.com/anchore/syft",
          "github.com/tektoncd/cli",
          "github.com/mikefarah/yq/v4"
        ],
        "enabled": true,
        "groupName": "Runner software"
      }
    ]
  },
  "rpm-lockfile": {
    "packageRules": [
      {
        "matchFileNames": [
          "deps/rpm/*"
        ],
        "groupName": "Runner software"
      }
    ]
  },
  "dockerfile": {
    "packageRules": [
      {
        "matchFileNames": [
          "Containerfile"
        ],
        "groupName": "Base images"
      },
      {
        "matchPackageNames": [
          "registry.access.redhat.com/ubi10/go-toolset"
        ],
        "allowedVersions": "< 2.0"
      }
    ]
  },
  "github-actions": {
    "packageRules": [
      {
        "matchManagers": [
          "github-actions"
        ],
        "groupName": "GitHub Actions"
      }
    ]
  },
  "packageRules": [
    {
      "matchDatasources": [
        "pypi"
      ],
      "groupName": "Python dependencies"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
