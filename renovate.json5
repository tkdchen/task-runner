// Do not edit this file directly, but in devtool/renovate.py
// Re-generate with:
//     devtool gen renovate.json5
{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "schedule": [
    "* * * * *"
  ],
  "prHourlyLimit": 0,
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchPackageNames": [
        "github.com/open-policy-agent/conftest",
        "github.com/sigstore/cosign/v3",
        "oras.land/oras",
        "github.com/anchore/syft",
        "github.com/tektoncd/cli",
        "github.com/mikefarah/yq/v4"
      ],
      "enabled": true,
      "groupName": "Go tools"
    },
    {
      "matchDatasources": [
        "pypi"
      ],
      "groupName": "Python dependencies"
    },
    {
      "matchManagers": [
        "git-submodules"
      ],
      "groupName": "Git submodules"
    },
    {
      "matchManagers": [
        "git-submodules"
      ],
      "matchPackageNames": [
        "https://github.com/openshift/oc.git"
      ],
      "versioning": "regex:^openshift-clients-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<build>\\d+)$"
    },
    {
      "matchFileNames": [
        "Containerfile"
      ],
      "groupName": "Base images"
    },
    {
      "matchPackageNames": [
        "registry.access.redhat.com/ubi10/go-toolset"
      ],
      "allowedVersions": "< 2.0"
    }
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
